@using RunGroupWebApp.Data.Enums
@using RunGroupWebApp.ViewModel
@model CreateClubViewModel
@{
    
}

<form action="Create" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Description">Description</label>
    <input asp-for="Description" type="text" class="form-control">
  </div>
  <div class="form-group">
      <label asp-for="ClubCategory">Club Category</label>
    <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()"></select>
  </div>
  
  <div class="form-group">
      <label asp-for="Address.Street">Street</label>
    <input asp-for="Address.Street" type="text" class="form-control">
  </div>
  <div class="form-group">
      <label asp-for="Address.City">City</label>
    <input asp-for="Address.City" type="text" class="form-control">
  </div>
  <div class="form-group">
      <label asp-for="Address.State">State</label>
    <input asp-for="Address.State" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Address.ZipCode">ZipCode</label>
    <input asp-for="Address.ZipCode" type="text" class="form-control">
  </div>

  <div class="form-group">
    <label asp-for="Image">Image...</label>
    <input asp-for="Image" type="file" class="form-control">
  </div>


  <button type="submit" class="btn btn-primary">Submit</button>
</form>