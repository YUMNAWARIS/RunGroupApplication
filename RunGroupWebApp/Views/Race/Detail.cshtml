@model Race
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Race Detail - " + @Model.Title;
}

<section>
    <div class="container">
        <div class="row">
            <img alt="Image" 
                src="https://www.eatthis.com/wp-content/uploads/sites/4/2020/05/running.jpg?quality=82&amp;
                strip=1&amp;resize=640%2C360" 
                class="rounded img-fluid">
        </div>

        <div class="row">
            <p class="h1">@Model.Title</p>
            <p class="h6">@Model.Description</p>
        </div>

        <div class="row">
            <div class="col-12 col-md-4">
              <!-- end card -->
              <div class="card">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                      <div><i class="icon-text-document mr-1"></i>Street</div>
                      <span>@Model.Address.Street</span>
                    </div>
                  </li>
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                      <div><i class="icon-edit mr-1">City</i></div>
                      <span>@Model.Address.City</span>
                    </div>
                  </li>
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                      <div><i class="icon-thumbs-up mr-1"></i>State</div>
                      <span>@Model.Address.State</span>
                    </div>
                  </li>
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                      <div><i class="icon-share mr-1">Zip Code</i></div>
                      <span>@Model.Address.ZipCode</span>
                    </div>
                  </li>
                </ul>
              </div>
              <!-- end card -->
              <!-- end card -->
            </div>
        </div>

    </div>

</section>